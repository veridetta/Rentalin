<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_left"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:background="@drawable/car"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/id_mobil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID : 1"
                        android:visibility="gone"
                        android:padding="@dimen/_6sdp"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/grey_800"/>
                    <TextView
                        android:id="@+id/namaMobil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pajero Sport"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/grey_800"/>
                    <TextView
                        android:id="@+id/kodeMobil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kode Mobil : "
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/grey_600"/>
                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/grey_600"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/grey_600"/>
                    <TextView
                        android:id="@+id/pendapatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 3.000.000"
                        android:textSize="@dimen/_18sdp"
                        android:textColor="@color/grey_600"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey_400"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_6sdp"
                    android:paddingRight="@dimen/_6sdp"
                    android:text="Ketuk untuk melihat / mengubah data"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/grey_400"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>